<style>
    body {
        background-color: lavender; /* Puedes ajustar el color según tus preferencias */
    }
</style>


<!-- Section: Design Block -->
<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('@Url.Content("~/images/fondo.png")');
        background-position: center left;
        background-size: cover;
        height: 300px;
    "></div>
    <!-- Background image -->

    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.2);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5" style="color:lavender">Registrarse</h2>
                    <form method="post">
                        <!-- Email input -->
                        <label>Nombre</label>
                        <input type="text" name="nombre" class="form-control" />
                        <label>Email</label>
                        <input type="text" name="email" class="form-control" />
                        <label>Contraseña</label>
                        <input type="text" name="password" class="form-control" />
                        <label>Foto de perfil</label>
                        <input type="text" name="imagen" class="form-control" />
                        <br />
                        <!-- Submit button -->
                        <button  class="btn btn-outline-dark btn-block mb-4">Registrarse</button>

                        <h2 style="color:rebeccapurple; font-size: medium;">
                            @ViewData["MENSAJE"]
                        </h2>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>¿Ya estas Registrado? <br /> <a asp-area="" asp-controller="Usuarios" asp-action="Login" style="color:rebeccapurple">Volver a Iniciar sesion</a></p>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->