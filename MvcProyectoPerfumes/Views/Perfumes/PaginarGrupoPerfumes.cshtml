@model List<VistaPerfumes>

@{
    ViewData["Title"] = "PaginarGrupoPerfumes";
}
@{
    int registros = (int)ViewData["REGISTROS"];
    int numeroPagina = 1;
}

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item">
            <a asp-controller="Perfumes"
               asp-action="PaginarGrupoPerfumes"
               asp-route-posicion="1">
                Primero
            </a>
        </li>

        <li class="list-group-item">
            <a asp-controller="Perfumes"
               asp-action="PaginarGrupoPerfumes"
               asp-route-posicion="@ViewData["ANTERIOR"]">
                Anterior
            </a>
        </li>

        <li class="list-group-item">
            <a asp-controller="Perfumes"
               asp-action="PaginarGrupoPerfumes"
               asp-route-posicion="@ViewData["SIGUIENTE"]">
                Siguiente
            </a>
        </li>

        <li class="list-group-item">
            <a asp-controller="Perfumes"
               asp-action="PaginarGrupoPerfumes"
               asp-route-posicion="@ViewData["ULTIMO"]">
                Ultimo
            </a>
        </li>
    </ul>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Marca</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdPerfume</td>
                <td>@item.Nombre</td>
                <td>@item.Marca</td>
            </tr>
        }
    </tbody>
</table>

